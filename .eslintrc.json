{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:vue/vue3-strongly-recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["vue"],
  "rules": {
    "indent": ["warn", "tab"],
    "quotes": ["error", "double"],
    "semi": ["error", "always"],
    "vue/no-useless-template-attributes": ["off"]
  },
  "globals": {
    "L": true, //Leaflet instance
    "zingchart": true, //Zingcharts instance
    "defineComponent": true, //Vue defineComponent method
    "defineProps": true //Vue method
  }
}
