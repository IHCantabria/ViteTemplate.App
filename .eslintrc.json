{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-recommended",
    "plugin:promise/recommended",
    "plugin:import/recommended",
    "plugin:prettier/recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["vue", "local-rules"],
  "rules": {
    "local-rules/require-id-on-inputs-buttons": "error",
    "local-rules/require-data-test-on-inputs-buttons": "error",
    "local-rules/require-all-props": [
      "error",
      {
        "ignoreUnknownProps": true
      }
    ],
    "local-rules/require-all-props-unknown": "warn",
    "prefer-const": ["error", { "destructuring": "any" }],
    "vue/require-name-property": 2,
    "vue/match-component-file-name": [
      "error",
      {
        "extensions": ["js", "vue"],
        "shouldMatchCase": true
      }
    ],
    "vue/require-prop-types": "error",
    "vue/require-valid-default-prop": "error",
    "vue/prop-name-casing": ["error", "camelCase"],
    "vue/attribute-hyphenation": ["error", "always"],
    "no-var": 2
  },
  "globals": {
    "L": true,
    "zingchart": true,
    "defineComponent": true,
    "defineProps": true,
    "__APP_VERSION__": "readonly"
  },
  "overrides": [
    {
      "files": ["*.html"],
      "parser": "@html-eslint/parser",
      "plugins": ["@html-eslint"],
      "extends": ["plugin:@html-eslint/recommended"],
      "rules": {
        "@html-eslint/no-extra-spacing-attrs": "off",
        "@html-eslint/require-closing-tags": [
          "error",
          {
            "selfClosing": "always"
          }
        ],
        "prettier/prettier": [
          "error",
          {
            "parser": "html"
          }
        ]
      }
    }
  ],
  "settings": {
    "import/resolver": {
      "alias": [
        ["@", "./src"],
        ["~", "./src"]
      ]
    }
  },
  "reportUnusedDisableDirectives": true
}
