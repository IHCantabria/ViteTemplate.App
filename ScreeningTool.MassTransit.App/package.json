{
  "name": "screeningtool.masstransit.app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "create-pwa-assets": "pwa-asset-generator ./src/assets/icons/soseas_inverse.png ./public/img/icons --manifest ./public/manifest.json",
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "build:dev": "vue-cli-service build --mode development",
    "build:preprod": "vue-cli-service build --mode preproduction",
    "build:all": "vue-cli-service build && vue-cli-service build --mode development",
    "lint": "npm run lint:code && npm run lint:style",
    "lint:style": "stylelint src/**/*.{vue,htm,html,css,sss,less,scss}",
    "lint:code": "vue-cli-service lint",
    "test": "npm run test:unit -- --passWithNoTests && npm run test:e2e -- --headless",
    "test:e2e": "vue-cli-service test:e2e",
    "test:unit": "vue-cli-service test:unit --no-cache",
    "test:unit:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --no-cache --runInBand",
    "test:snap": "npm run test:unit -- -u",
    "review": "npm run lint && npm run test",
    "deploy-patch": "npm version patch -m v%s",
    "deploy-minor": "npm version minor -m v%s",
    "deploy-major": "npm version major -m v%s",
    "preversion": "npm run review",
    "version": "npm run build:all && git add -A",
    "postversion": "git push origin main && git push origin --tags",
    "deploy-android": "npm run build && npx cap copy android && npx cap open android",
    "deploy-firebase": "npm run build && firebase deploy"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "npm": "^6.14.13",
    "vue": "^2.6.11"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^4.5.13",
    "@vue/cli-plugin-e2e-cypress": "~4.5.0",
    "@vue/cli-plugin-eslint": "^4.5.13",
    "@vue/cli-plugin-unit-jest": "~4.5.0",
    "@vue/cli-service": "^4.5.13",
    "@vue/test-utils": "^1.2.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^7.29.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.9",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-vue": "^7.11.1",
    "sass": "^1.35.1",
    "sass-loader": "10.0.3",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-config-standard-scss": "^1.1.0",
    "stylelint-scss": "^3.19.0",
    "stylelint-webpack-plugin": "^2.2.1",
    "vue-template-compiler": "^2.6.14"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "rules": {}
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
